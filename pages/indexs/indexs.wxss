.u-wrp-bnr {width: 100%;height: 400rpx;display: block;position: relative;background: #f0f0f0;}
.u-img-slide {width: 100%;height: inherit;}
page{background:#fff;box-sizing:border-box;}
.index-title{height:50rpx;line-height:50rpx;text-indent:30rpx;font-size:44rpx;color:#333;margin-top:20rpx;margin-top:50rpx;}
.index-one{padding:25rpx;margin-left:-16px;margin-top:20rpx;}
.index-b{width:28%;height:250rpx;box-shadow:0 8rpx 32rpx 0 rgba(183,193,205,0.20);float:left;margin-left:4.2%;padding:20rpx 5rpx 0 5rpx;}
.index-b>view>image{width:80px;height:69px;}
.index-c{height:40rpx;line-height:40rpx;font-size:28rpx;color:#333;text-align:center;margin-top:20rpx;}
.index-two{height:auto;padding:0 30rpx 30rpx 30rpx;}
.index-a{width:33.33%;height:180rpx;float:left;padding:20rpx 0 0 0;}
.index-a>view>image{width:32px;height:32px;}
.index-two>view:nth-child(1){margin-top:30rpx;width:100%;height:auto;box-shadow:0 8rpx 32rpx 0 rgba(183,193,205,0.20);padding-top:40rpx;padding-bottom:30rpx;}
.index-d{width:100%;height:auto;}
.index-d-l{width:22%;height:auto;float:left;text-align:right;padding:0 2% 0 0;position:relative;}
.index-d-r{width:72%;height:auto;float:right;padding:0 1% 30rpx 2%;color:#999;font-size:28rpx;border-left:2rpx solid #eee;}
.index-d-l1{font-size:28rpx;color:#666;}
.index-d-l2{font-size:36rpx;color:#333;}
.index-d-l3{width:20rpx;height:20rpx;background:#07c160;border-radius:50%;position:absolute;top:-10rpx;right:-16rpx;}
.index-e{width:200rpx;height:60rpx;line-height:60rpx;background:#3399ff;text-align:center;color:#fff;font-size:28rpx;margin:30rpx auto;border-radius:30rpx;}
.index-f{width:100%;height:40rpx;line-height:40rpx;font-size:28rpx;color:#999;text-align:center;}
.index-g{width:100%;height:80rpx;line-height:80rpx;font-size:48rpx;color:#333;text-align:center;}
.index-three{height:auto;padding:0 30rpx 30rpx 30rpx;}
.index-three>view:nth-child(1){margin-top:30rpx;width:96%;height:auto;padding:2%;color:#fff;font-size:28rpx;background:#07c160;border-radius:10rpx;}
.index-three-l{width:70%;height:auto;float:left;}
.index-three-r{width:30%;height:auto;float:right;}
.index-three-l1>text{background:#3399ff;}
.index-three-l1{height:40rpx;line-height:40rpx;}
.index-three-l2{height:70rpx;line-height:70rpx;font-size:30rpx;}



















